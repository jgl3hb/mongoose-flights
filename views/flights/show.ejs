
<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight #: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
    <div>Meals:</div>
    <ul> 
      <% flight.meals.forEach(function(meal) { %>  
        <li><%= meal.name %></li>
      <% }) %>
    </ul>
  </section>
  <form action="/flights/<%= flight._id %>/meals" method="post" id="add-meal-to-flight">
    <select name="mealId">
      <% meals.forEach(meal => { %> 
        <option value="<%= meal._id %>"><%= meal.name %> 
        </option>
      <% }) %>
    </select>
    <button type="submit">submit</button>


  <h2>Tickets</h2>
    <form 
      action="/flights/<%= flight._id %>/tickets"
      id="add-ticket"
      method="post"
    >
    <label for="seat-input">Seat Number:</label>
    <input name="seat" id="seat-input" required pattern="[A-F][1-9]\d?">
    <label for="price-input">Price:</label>
    <input name="price" id="price">
    <button type="submit">Add Ticket</button>
  </form>
</main>